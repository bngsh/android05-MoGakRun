<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoGakRun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mogakrun_primary</item>
        <item name="colorPrimaryVariant">@color/mogakrun_primary_dark</item>
        <item name="colorOnPrimary">@color/mogakrun_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mogakrun_secondary</item>
        <item name="colorSecondaryVariant">@color/mogakrun_secondary_dark</item>
        <item name="colorOnSecondary">@color/mogakrun_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mogakrun_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- TabLayout color. -->
        <item name="tabSelectedTextColor">@color/mogakrun_on_primary</item>
        <!-- Base color. -->
        <item name="android:windowBackground">@color/mogakrun_background</item>
        <item name="android:textColor">@color/mogakrun_onBackground</item>
        <item name="colorOnSurface">@color/mogakrun_onBackground</item>
        <item name="alertDialogTheme">@style/MoGakRunDialog</item>
    </style>

    <style name="Theme.MoGakRun.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/thumbnail_src_small</item>
        <item name="postSplashScreenTheme">@style/Theme.MoGakRun</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>